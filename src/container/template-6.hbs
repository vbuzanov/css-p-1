<header class='header'>
  <a class="" href="#test">
    {{>logo}}
  </a>
  <nav class='header_nav'>
    <div class="header_nav_right">
      {{>nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  {{#with info}}
  <div class="info">
    <h1 class="info_title">{{title}}</h1>
    <p class="info_text">{{description}}</p>
  </div>
  {{/with}}

  {{#with form}}
  <form class="form">
    <div class="form_input_list">
      {{#each inputs}}
      <input type="{{type}}" class="form_input" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" />
      {{/each}}
    </div>
    <div class="form_checkbox">
      <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
      <div>

      </div>
      <label for="{{checkbox.name}}">{{checkbox.label}}</label>
    </div>
    <button type="submit" class="form_button">{{button}}</button>
    <div class="hr"></div>
    <p class="form_info">{{info}}</p>
  </form>
  {{/with}}
</main>

{{#with updates}}
<div class="updates">

  <h3 class="updates_title">{{title}}</h3>
  {{#each list}}
  {{>cardList nickname=nickname description=description}}
  {{/each}}

  <a href="{{show_all.url}}" class="show_all">{{show_all.text}}</a>
</div>
{{/with}}


{{#with expirience}}
<div class="expirience">
  <h3 class="expirience_title">{{title}}</h3>
  <span class="hot">{{badge}}</span>
  <div class="expirience_card">
    {{#each list}}
    {{>cardExpirience name=name details=details}}
    {{/each}}
  </div>
</div>
{{/with}}

<footer class="footer" id="test">
  <div>
    {{>logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{>nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>